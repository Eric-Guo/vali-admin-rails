<main class="app-content">
  <div class="row">
    <div class="col-md-8">
<%= form_with(model: @course, local: true, class: 'login-form') do |f| %>
      <div class="tile">
        <h3 class="tile-title"><%= t('ui.training_info_new') -%></h3>
        <div class="tile-body">
          <form class="form-horizontal">
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('course.title') -%></label>
              <div class="col-md-7">
                <%= f.text_field :title, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('course.address') -%></label>
              <div class="col-md-7">
                <%= f.text_field :address, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('course.capacity') -%></label>
              <div class="col-md-7">
                <%= f.number_field :capacity, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('course.start_time') -%></label>
              <div class="col-md-7">
                <%= f.datetime_field :start_time, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('course.end_time') -%></label>
              <div class="col-md-7">
                <%= f.datetime_field :end_time, class: 'form-control col-md-8' %>
              </div>
            </div>
          </form>
        </div>
        <div class="tile-footer">
          <div class="row">
            <div class="col-md-8 col-md-offset-3">
              <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
                <i class="fa fa-leanpub fa-lg fa-fw"></i><%= t('form.new') -%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
<% end %>
    </div>
  </div>
</main>
