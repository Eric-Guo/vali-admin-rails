<main class="app-content">
  <div class="row">
    <div class="col-md-8">
<%= form_with(model: @course, local: true, class: 'login-form') do |f| %>
      <div class="tile">
        <h3 class="tile-title"><%= t('ui.training_info_new') -%></h3>
        <div class="tile-body">
          <form class="form-horizontal">
            <div class="form-group row">
              <label class="control-label col-md-3"><%= t('course.title') -%></label>
              <div class="col-md-8">
                <%= f.text_field :title, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-3"><%= t('vertical_market.title') -%></label>
              <div class="col-md-8">
  <%= f.select :vertical_market_ids, policy_scope(VerticalMarket).pluck(:name, :id), {}, id: 'course-vertical-markets-select', class: 'form-control col-md-8', multiple: true %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-3"><%= t('course.address') -%></label>
              <div class="col-md-8">
                <%= f.text_field :address, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('course.body') -%></label>
              <div class="col-md-8 offset-md-3">
                <%= f.text_area :body, rows: 20, class: 'form-control col-md-12' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-3"><%= t('course.capacity') -%></label>
              <div class="col-md-8">
                <%= f.number_field :capacity, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-3"><%= t('course.start_time') -%></label>
              <div class="col-md-8">
                <%= f.datetime_field :start_time, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-3"><%= t('course.end_time') -%></label>
              <div class="col-md-8">
                <%= f.datetime_field :end_time, class: 'form-control col-md-8' %>
              </div>
            </div>
          </form>
        </div>
        <div class="tile-footer">
          <div class="row">
            <div class="col-md-8 col-md-offset-3">
              <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
                <i class="fa fa-leanpub fa-lg fa-fw"></i><%= t('form.new') -%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
<% end %>
    </div>
  </div>
</main>
