<main class="app-content">
  <div class="app-title">
    <div>
      <h1><i class="fa fa-dashboard"></i> 代理商列表</h1>
      <p><%= @vendor_list_description -%></p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
      <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
      <li class="breadcrumb-item"><a href="<%= vendors_path -%>">Vendor List</a></li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tile">
        <div class="tile-body">
          <table class="table table-hover table-bordered" id="usersTable">
            <thead>
              <tr>
                <th><%= t('user.name') -%></th>
                <th><%= t('user.title') -%></th>
                <th><%= t('user.phone') -%></th>
                <th><%= t('company.name') -%></th>
                <th><%= t('user.email') -%></th>
                <th><%= t('company.address') -%></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| -%>
              <tr>
                <td><%= user.name -%></td>
                <td><%= user.title -%></td>
                <td><%= user.phone -%></td>
                <td><%= user.companies.map(&:name).to_sentence -%></td>
                <td><%= user.email -%></td>
                <td><%= user.companies.map(&:address).to_sentence -%></td>
              </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
