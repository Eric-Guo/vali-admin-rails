<main class="app-content">
  <div class="row">
    <div class="col-md-8">
<%= form_with(model: @circular, local: true, class: 'login-form') do |f| %>
      <div class="tile">
        <h3 class="tile-title"><%= t('ui.circular_new') -%></h3>
        <div class="tile-body">
          <form class="form-horizontal">
            <div class="form-group row">
              <label class="control-label col-md-4"><%= t('circular.title') -%></label>
              <div class="col-md-8">
                <%= f.text_field :title, class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('circular.body') -%></label>
              <div class="col-md-12">
                <%= f.text_area :body, rows: 20, class: 'form-control col-md-12' %>
              </div>
            </div>
          </form>
        </div>
        <div class="tile-footer">
          <div class="row">
            <div class="col-md-8 col-md-offset-3">
              <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
                <i class="fa fa-leanpub fa-lg fa-fw"></i><%= t('form.new') -%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
<% end %>
    </div>
  </div>
</main>
