<main class="app-content">
  <div class="row">
    <div class="col-md-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login-form' }) do |f| %>
      <div class="tile">
        <h3 class="tile-title"><%= t('user.sign_up') -%></h3>
        <div class="tile-body">
          <form class="form-horizontal">
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('user.email') -%></label>
              <div class="col-md-7">
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Enter email address', class: 'form-control col-md-8' %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('user.password') -%></label>
              <div class="col-md-7">
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control col-md-8' %>
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> <%= t('user.characters_minimum') -%></em>
                <% end %>
              </div>
            </div>
            <div class="form-group row">
              <label class="control-label col-md-5"><%= t('user.password_confirmation') -%></label>
              <div class="col-md-7">
                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control col-md-8' %>
              </div>
            </div>
          </form>
        </div>
        <div class="tile-footer">
          <div class="row">
            <div class="col-md-8 col-md-offset-3">
              <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
                <i class="fa fa-sign-in fa-lg fa-fw"></i><%= t('user.sign_up') -%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
<% end %>
    </div>
  </div>
</main>
