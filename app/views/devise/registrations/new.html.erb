<section class="login-content">
  <div class="logo">
    <h1>Harman</h1>
  </div>
  <div class="login-box login-box-signup">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login-form' }) do |f| %>
    <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Sign up</h3>
    <div class="form-group">
      <label class="control-label">USERNAME</label>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email', class: 'form-control' %>
    </div>
    <div class="form-group">
      <label class="control-label">PASSWORD
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
      </label>
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
    </div>
    <div class="form-group">
      <label class="control-label">PASSWORD CONFIRMATION</label>
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
    </div>
    <div class="form-group btn-container">
      <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block') do %>
        <i class="fa fa-sign-in fa-lg fa-fw"></i>Sign up
      <% end %>
    </div>
<% end %>
  </div>
</section>

