<section class="login-content">
  <div class="logo">
    <h1>Harman</h1>
  </div>
  <div class="login-box">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'login-form' }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Change your password</h3>
    <div class="form-group">
      <label class="control-label">New password
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
      </label>
      <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
    </div>
    <div class="form-group">
      <label class="control-label">Confirm new password</label>
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
    </div>
    <div class="form-group btn-container">
      <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block') do %>
        <i class="fa fa-sign-in fa-lg fa-fw"></i>Change my password
      <% end %>
    </div>
<% end %>
  </div>
</section>
