<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HarmanVendor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="app sidebar-mini rtl" data-notice="<%= j notice -%>" data-alert="<%= j alert || devise_error_messages -%>">
    <%# Navbar %>
    <header class="app-header"><a class="app-header__logo" href="<%= root_path -%>"><%= image_tag 'logo.png' %></a>
      <%# Sidebar toggle button %>
      <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
      <%# Navbar Right Menu %>
      <ul class="app-nav">
        <% if current_user.present? %>
          <%# render 'shared/notification' %>
          <%# User Menu %>
          <li class="dropdown"><a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu"><i class="fa fa-user fa-lg"></i></a>
            <ul class="dropdown-menu settings-menu dropdown-menu-right">
              <li>
                <%= link_to edit_user_registration_path, class: 'dropdown-item' do -%>
                  <i class="fa fa-cog fa-lg"></i> Settings
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path, class: 'dropdown-item' do -%>
                  <i class="fa fa-user fa-lg"></i> Profile
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
                  <i class="fa fa-sign-out fa-lg"></i> Logout
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="app-login-box">
            <a class="btn btn-info" href="<%= new_user_session_path -%>"><%= t('user.sign_in') -%></a>

          </li>
        <% end %>
      </ul>
    </header>
    <%# Sidebar menu %>
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
      <% if current_user.present? %>
        <div class="app-sidebar__user">
          <img class="app-sidebar__user-avatar" src="<%= current_user.gravatarurl -%>" alt="User Image">
          <div>
            <p class="app-sidebar__user-name"><%= current_user.name -%></p>
            <p class="app-sidebar__user-designation"><%= current_user.title -%></p>
            <%= policy(User).system_role_name -%>
          </div>
        </div>
      <% end %>
      <ul class="app-menu">
        <li>
          <%= link_to root_path, class: "app-menu__item #{params[:controller] == 'home' ? 'active' : ''}" do %>
            <i class="app-menu__icon fa fa-calendar"></i><span class="app-menu__label"><%= t('ui.notification') -%></span>
          <% end %>
        </li>
        <% if policy(Course).available? %>
        <li>
          <%= link_to available_courses_path, class: "app-menu__item #{params[:controller] == 'courses' && params[:action] == 'available' ? 'active' : ''}" do %>
            <i class="app-menu__icon fa fa-sign-in"></i><span class="app-menu__label"><%= t('ui.training_user_add') -%></span>
          <% end %>
        </li>
        <% end -%>
        <% if policy(Company2ndRegistration).create_2nd_vendor? %>
        <li>
          <%= link_to new_2nd_vendor_companies_path, class: "app-menu__item #{params[:controller] == 'companies' && params[:action] == 'new_user' ? 'active' : ''}" do %>
            <i class="app-menu__icon fa fa-user-plus"></i><span class="app-menu__label"><%= t('ui.vendor_2nd_signup') -%></span>
          <% end %>
        </li>
        <% end -%>
        <% if policy(Circular).index? %>
        <li class="treeview <%= params[:controller] == 'circulars' ? 'is-expanded' : '' -%>"><a class="app-menu__item" href="#" data-toggle="treeview"><i class="app-menu__icon fa fa-calendar"></i><span class="app-menu__label"><%= t('ui.circular_manage') -%></span><i class="treeview-indicator fa fa-angle-right"></i></a>
          <ul class="treeview-menu">
            <li>
              <%= link_to circulars_path, class: "treeview-item #{params[:controller] == 'circulars' && params[:action] == 'index' ? 'active' : ''}" do %>
                <i class="icon fa fa-calendar"></i> <%= t('ui.circular_list') -%></a>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to new_circular_path, class: "treeview-item #{params[:controller] == 'circulars' && params[:action] == 'new' ? 'active' : ''}" do %>
                <i class="icon fa fa-plus-square"></i> <%= t('ui.circular_new') -%></a>
              <% end %>
            </li>
          </ul>
        </li>
        <% end -%>
        <% if policy(Course).index? %>
        <li class="treeview <%= params[:controller] == 'courses' && params[:action] != 'available' ? 'is-expanded' : '' -%>"><a class="app-menu__item" href="#" data-toggle="treeview"><i class="app-menu__icon fa fa-graduation-cap"></i><span class="app-menu__label"><%= t('ui.training_info_manage') -%></span><i class="treeview-indicator fa fa-angle-right"></i></a>
          <ul class="treeview-menu">
            <li>
              <%= link_to courses_path, class: "treeview-item #{params[:controller] == 'courses' && params[:action] == 'index' ? 'active' : ''}" do %>
                <i class="icon fa fa-graduation-cap"></i> <%= t('ui.training_info_publish') -%></a>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to new_course_path, class: "treeview-item #{params[:controller] == 'courses' && params[:action] == 'new' ? 'active' : ''}" do %>
                <i class="icon fa fa-leanpub"></i> <%= t('ui.training_info_new') -%></a>
              <% end %>
            </li>
          </ul>
        </li>
        <% end -%>
        <% if policy(User).index? || policy(Company).index? %>
        <li class="treeview <%= (params[:controller] == 'vendors' || (params[:controller] == 'companies' && params[:action] == 'index')) ? 'is-expanded' : '' -%>"><a class="app-menu__item" href="#" data-toggle="treeview"><i class="app-menu__icon fa fa-th-list"></i><span class="app-menu__label"><%= t('ui.vendor_manage') -%></span><i class="treeview-indicator fa fa-angle-right"></i></a>
          <ul class="treeview-menu">
            <li>
              <%= link_to companies_path, class: "treeview-item #{params[:controller] == 'companies' && params[:action] == 'index' ? 'active' : ''}" do %>
                <i class="icon fa fa-list-ul"></i> <%= t('ui.vendor_companies_list') -%></a>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to vendors_path, class: "treeview-item #{params[:controller] == 'vendors' && params[:action] == 'index' ? 'active' : ''}" do %>
                <i class="icon fa fa-list-ol"></i> <%= t('ui.vendor_list') -%></a>
              <% end %>
            </li>
          </ul>
        </li>
        <% end -%>
      </ul>
    </aside>
    <%= yield %>
  </body>
</html>
